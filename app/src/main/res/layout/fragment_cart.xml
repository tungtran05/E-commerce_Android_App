<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CartFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCartItem"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </androidx.recyclerview.widget.RecyclerView>

<!--            <TextView-->
<!--                android:id="@+id/textViewSubPayment"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold"-->
<!--                android:text="SubPayment: "-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="end">-->

<!--            </TextView>-->

            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Order Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/editTextRecipientName"
                    android:hint="Enter Name"
                    android:layout_width="195dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp">

                </EditText>
                <EditText
                    android:id="@+id/editTextRecipientPhone"
                    android:hint="Enter Phone Number"
                    android:layout_width="195dp"
                    android:layout_height="40dp">

                </EditText>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextRecipientEmail"
                android:hint="Enter Recipient's Email"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/editTextDetailedAddress"
                    android:hint="Enter Detailed Address"
                    android:layout_width="195dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp">

                </EditText>
                <EditText
                    android:id="@+id/editTextWard"
                    android:hint="Enter Ward"
                    android:layout_width="195dp"
                    android:layout_height="40dp">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/editTextDistrict"
                    android:hint="Enter District"
                    android:layout_width="195dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp">

                </EditText>
                <EditText
                    android:id="@+id/editTextCity"
                    android:hint="Enter City"
                    android:layout_width="195dp"
                    android:layout_height="40dp">

                </EditText>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextNote"
                android:hint="Enter Note"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </EditText>

            <Button
                android:id="@+id/buttonOrder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:text="Order"
                app:backgroundTint="@color/custom_red">

            </Button>


        </LinearLayout>


    </ScrollView>


</FrameLayout>