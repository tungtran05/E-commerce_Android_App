<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:text="UPDATE YOUR INFORMATION"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="@color/custom_red"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/editTextUpdateUserFirstname"
                android:layout_marginRight="25dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Enter firstname">

            </EditText>

            <EditText
                android:id="@+id/editTextUpdateUserMiddlename"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Enter middle name">

            </EditText>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextUpdateUserLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter lastname">

        </EditText>

        <EditText
            android:id="@+id/editTextUpdateUserPhonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter phone number">

        </EditText>

        <EditText
            android:id="@+id/editTextUpdateUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter email">

        </EditText>

        <Button
            android:id="@+id/buttonUpdateUserUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Update"
            app:backgroundTint="@color/custom_red">

        </Button>

        <Button
            android:id="@+id/buttonUpdateUserCancel"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Cancel"
            app:backgroundTint="@color/custom_black">

        </Button>


    </LinearLayout>

</ScrollView>